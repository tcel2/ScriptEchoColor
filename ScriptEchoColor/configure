echo
echo "Cheking Environment..."
bFailed=false
FUNCcheck(){
  local strDepend="$1"
  shift
  
  local strExec="$1"
  echo -n "checking for $strExec..."
  eval $@ 2>&1 >/dev/null
  local nRet=$?
  if ((nRet == 127)); then
    echo " missing!"
    bFailed=true
  else
    if((nRet != 0)); then
      echo -n " [$nRet]"  # exit code not 0 but command accessible
    fi
    echo " OK"
  fi
}
FUNCcheck ""   bash      --help # THESE LINES must be typed here this way cuz package creator use these as database to fill up depend.txt
FUNCcheck ""   grep      --help
FUNCcheck ""   expr      --help
FUNCcheck ""   ps        --help
FUNCcheck ""   tail      --help
FUNCcheck ""   tr        --help
FUNCcheck ""   basename  --help
FUNCcheck ""   md5sum    --help
FUNCcheck ""   readlink  --help
FUNCcheck bash echo
FUNCcheck ""   tput      longname
FUNCcheck bash printf    "test"
FUNCcheck bash read      -t 0
FUNCcheck ""   wc        --help
FUNCcheck ""   gawk      --help
FUNCcheck ""   date      --help
FUNCcheck ""   who       --help
FUNCcheck ""   bc        --help
FUNCcheck ""   play      --help
FUNCcheck ""   festival  --help
##FUNCcheck ""   lockfile  #not being used anymore as was giving problems at vfat filesystems
if $bFailed; then
  echo -e "exiting...\a"
  exit 1
fi
if [[ ! -a /dev/null ]]; then # -c
  echo "missing /dev/null character special file used to prevent text output"
  echo -e "exiting...\a"
  exit 1
fi
if [[ ! -a /dev/stdout ]]; then
  echo "missing /dev/stdout character special file"
  echo -e "exiting...\a"
  exit 1
fi
if [[ ! -a /dev/stderr ]]; then
  echo "missing /dev/stderr character special file"
  echo -e "exiting...\a"
  exit 1
fi

# Mimic just --prefix of autoconf functionalities
strPrefix="/usr/local"
if [[ "${1:0:9}" == "--prefix=" ]]; then
  strPrefix="${1:9}"
elif [[ -n "$1" ]]; then
  echo "invalid option: $1"
  exit 1
fi
echo "INSTPREFIX=$strPrefix" >Makefile.cfg

echo "ready to install, type: make install"
